<!DOCTYPE html>
<meta name="viewport" content="width=device-width, initial-scale=1">

<html>
	<head>
		<title>Sample Weather App</title>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
		<link rel="stylesheet" type="text/css" href="/style.css" />
	</head>

	<body>
		<section class="section">
			<div class="container form-container">
				<h1 class="title">Sample Weather App</h1>
				<form action="/forecast" method="get">
					<div class="field has-addons is-grouped is-grouped-centered">
						<div class="control">
							<input class="input" type="text" name="city" placeholder="City" />
						</div>
						<div class="control">
							<button type="submit" class="button is-primary">Get Weather Forecast</button>
						</div>
					</div>
				</form>
			</div>
		</section>

		<section class="section">
			<div class="table-container">
				<table class="table is-bordered is-striped is-hoverable is-fullwidth">
					<thead>
						<tr>
							<th>
								<% if (weatherOne) { %> 
									<%= Date.now() %>
								<% } %>
							</th>
							<th>
								<% if (weatherTwo) { %> 
									<%= Date.now() + 1 %>
								<% } %>
							</th>
							<th>Three</th>
							<th>Four</th>
							<th>Five</th>
							<th>Six</th>
							<th>Seven</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>
								<% if (weatherOne) { %> 
									<p>  
										<%= weatherOne.datetime %>
									</p>
									<p>  
										<%= weatherOne.temp %>
									</p>
									<p>  
										<% if (weatherOne.weather) { %> 
											<%= weatherOne.weather.description %> | <%= weatherOne.weather.icon %>
										<% } %>
									</p>
									<p>  
										<%= weatherOne.wind_spd %> | <%= weatherOne.wind_dir %>
									</p>
								<% } %>
							</td>
							<td>
								<% if (weatherTwo) { %> 
									<p>  
										<%= weatherTwo.datetime %>
									</p>
									<p>  
										<%= weatherTwo.temp %>
									</p>
									<p>  
										<% if (weatherTwo.weather) { %> 
											<%= weatherTwo.weather.description %> | <%= weatherTwo.weather.icon %>
										<% } %>
									</p>
									<p>  
										<%= weatherTwo.wind_spd %> | <%= weatherTwo.wind_dir %>
									</p>
								<% } %>
							</td>
							<td>Three</td>
							<td>Four</td>
							<td>Three</td>
							<td>Four</td>
							<td>Three</td>
						</tr>
					</tbody>
				</table>
			</div>
		</section>
	</body>
</html>